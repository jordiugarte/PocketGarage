<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemArticle"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="8dp"
    android:background="@drawable/background_with_shadow">

    <ImageView
        android:id="@+id/articleItemImage"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@color/colorBlack"></ImageView>

    <TextView
        android:id="@+id/articleItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/articleItemImage"
        android:paddingTop="5dp"
        android:text="Title"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/articleItemShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/articleItemTitle"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/articleItemPrice"
        android:layout_toEndOf="@id/articleItemImage"
        android:text="Description"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/articleItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center|bottom"
        android:text="Bs. 20"
        android:textColor="@color/colorLightGreen"
        android:textSize="18sp" />

</RelativeLayout>